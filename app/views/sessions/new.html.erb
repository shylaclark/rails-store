<div class="store_form">
    <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
  <fieldset>
    <legend><strong>Sign In</strong></legend>
    <div class="field">
      <%= label_tag :name %><br>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
    <div>
      <p>New user? <%= link_to 'Sign up!', signup_path %></p>
    </div>
  </fieldset>
  <% end %>
</div>
